{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      // "@data/*": ["src/data/*"],
      // "@resolvers/*": ["src/resolvers/*"],
      // "@mutation/*": ["src/mutation/*"],
      // "@query/*": ["src/query/*"],
      // "@typeDefs/*": ["src/typeDefs/*"],
      // "@util/*": ["src/util/*"],
      "@schemas/*": ["src/schemas/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
